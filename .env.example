# Required environment variables for mailtracker
# Copy this file to .env and fill in your values

# Database connection string (required)
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/mailtrack

# Session secret key - generate with: openssl rand -base64 32 (required)
SECRET_KEY=your-secret-key-here

# API key for extension and automation - generate with: openssl rand -base64 32 (required)
API_KEY=your-api-key-here

# Dashboard login credentials (required)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-password-here

# Optional settings
# BASE_URL=https://your-domain.com
# DISPLAY_TIMEZONE=America/New_York
# COOKIE_SECURE=true  # Set to false for local development without HTTPS
# MAXMIND_LICENSE_KEY=your-maxmind-key  # For GeoIP lookups
